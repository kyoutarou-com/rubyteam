<div class="container">
    <form action="/tasks" method="post">
        <input class="form-control" type="text" name="title" placeholder="タイトル"><br>
        <input class="form-control" type="text" name="due_date" placeholder="締切"><br>
        リスト:
        <select class="form-select" name="list">
            <% List.all.each do |list| %>
                <option value="<%= list.id %>"><%= list.name %></option>
            <% end %>
        </select><br>
        <input class="form-control" type="submit" value="登録">
    </form>
</div>